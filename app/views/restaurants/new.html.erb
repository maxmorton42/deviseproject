<h1>Add Restaurant</h1>
<%= form_with(model: @restaurant, local: true) do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, required: true, placeholder: "Name" %>
  </div>
  <div class="field">
    <%= f.label :specials %>
    <%= f.text_field :specials %>
  </div>
  <%= f.submit %>
<% end %>